generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Autor {
  id     Int    @id @default(autoincrement())
  nombre String
}

model Editorial {
  id      Int     @id @default(autoincrement())
  nombre  String
  libroId Int?
  libros  Libro[]
}

model Libro {
  id          Int       @id @default(autoincrement())
  nombre      String
  publicacion Int
  precio      Int
  editorial   Editorial @relation(fields: [editorialId], references: [id])
  editorialId Int
}

model Usuario {
  id       Int    @id @default(autoincrement())
  nombre   String
  correo   String
  password String
}
